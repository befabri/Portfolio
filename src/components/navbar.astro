---
import ToggleTheme from "./ui/toggleTheme.astro";
const { showToggleTheme = true } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
const isHomepage = currentPath === "";
---

<header
    class={`flex flex-row max-w-screen-xl mx-auto items-center 
    ${isHomepage ? "justify-end" : "justify-between"} md:px-5 px-5 my-5`}>
    {
        !isHomepage && (
            <a href="/" class="text-xl tracking-tight text-zinc-800 dark:text-zinc-300">
                Accueil
            </a>
        )
    }
    {showToggleTheme && <ToggleTheme iconClass="w-5 h-5" />}
</header>

---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="404 Non trouvée">
    <Container>
        <div class="flex min-h-[calc(100vh-16rem)] items-center justify-center">
            <div class="mt-16 text-center">
                <h1 class="text-4xl font-bold lg:text-5xl lg:tracking-tight">404</h1>
                <p class="mt-4 text-lg text-slate-600">Page non trouvée.</p>
                <Link style="muted" href="/" class="mt-4 inline-block rounded px-4 py-2">
                    Retour sur la page principale
                </Link>
            </div>
        </div>
    </Container>
</Layout>

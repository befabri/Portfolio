---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="404 Non trouvée">
    <Container>
        <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
            <div class="mt-16 text-center">
                <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">404</h1>
                <p class="text-lg mt-4 text-slate-600">Page non trouvée.</p>
                <Link style="muted" href="/" class="inline-block mt-4 py-2 px-4 rounded">
                    Retour sur la page principale
                </Link>
            </div>
        </div>
    </Container>
</Layout>

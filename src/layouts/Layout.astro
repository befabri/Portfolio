---
import { SEO } from "astro-seo";
import Navbar from "@components/navbar.astro";
import Footer from "@components/footer.astro";
import Script from "@components/common/script.astro";
import { SITE } from "@utils/config.mjs";

export interface Props {
    title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL("/opengraph.jpg", Astro.site).toString();

const { title } = Astro.props;
const makeTitle = title ? title + " | " + "Benjamin Fabri" : "Benjamin Fabri";
const { language = "en" } = SITE;
---

<!DOCTYPE html>
<html class="scroll-smooth" lang={language}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href="/favicon.png" />
        <link rel="stylesheet" href="/global.css" />
        <script defer data-domain="bfabri.me" src="https://pl.bfabri.me/js/script.js"></script>
        <meta name="generator" content={Astro.generator} />

        <SEO
            title={makeTitle}
            description="Portfolio of Benjamin Fabri"
            canonical={canonicalURL}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: "website",
                    title: `Benjamin Fabri - Portfolio`,
                    image: resolvedImageWithDomain,
                },
                image: {
                    alt: "Benjamin Fabri - Homepage Screenshot",
                },
            }}
        />
    </head>
    <body class="bg-white text-zinc-800 antialiased dark:bg-neutral-900 dark:text-zinc-300"
        ><Navbar />
        <slot />
        <Footer />
        <Script />
        <style is:global>
            /* Improve Page speed */
            /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
            img {
                content-visibility: auto;
            }
        </style>
    </body>
</html>
